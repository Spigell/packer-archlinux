[ 
    { 
      "plugin" : "disk-partitioner", 
      "task" : "create gpt table via [plg] disk-partitioner", 
      "data" : 
        { "table" : { 
            "recreate" : "true", 
            "type" : "gpt", 
            "target" : "/dev/sda" 
          } 
        } 
    }, 
    { 
      "plugin" : "disk-partitioner", 
      "task" : "make main partition via [plg] disk-partitioner", 
      "data" : 
        { "partition" : { 
            "start" : "2Mib", 
            "end" : "16Gib", 
            "type" : "primary", 
            "flags" : "lvm", 
            "target" : "/dev/sda" 
          } 
        } 
    }, 
    { 
      "plugin" : "disk-partitioner", 
      "task" : "make boot partition via [plg] disk-partitioner", 
      "data" : 
        { "partition" : { 
           "fs" : {
              "type" : "fat32"
            },
              "start" : "16Gib", 
              "end" : "16702Mib", 
              "flags" : "bios_grub", 
              "target" : "/dev/sda" 
          } 
        } 
    }, 
    { 
      "plugin" : "lvm", 
      "task" : "create main lv via [plg] lvm", 
      "data" : 
        { 
          "fs" : { 
              "type" : "ext4" 
           }, 
          "partition" : "/dev/sda1", 
          "lv" : "slashroot", 
          "vg" : "vg_main", 
          "size" : "7GB", 
          "action" : "create" 
        } 
    }, 
    { 
      "plugin" : "lvm", 
      "task" : "create home lv via [plg] lvm", 
      "data" : 
        { 
          "fs" : 
            { 
             "type" : "ext4" 
            }, 
          "partition" : "/dev/sda1", 
          "lv" : "home", 
          "vg" : "vg_main", 
          "recreate" : "true", 
          "size" : "5G", 
          "action" : "create" 
        } 
    }, 
    {  
      "plugin" : "archlinux-install", 
      "task" : "Install Archlinux via [plg] archlinux-install", 
      "data" : 
         { 
           "hostname" : "archlinux", 
           "timezone" : "Europe/Moscow", 
           "rootpw" : "archlinux", 
           "mount" :  
             { 
               "table" : [ "/dev/mapper/vg_main-home:/home/" ]
             },
           "locales" : 
             { 
               "default" : "en_US.UTF-8" 
             }, 
           "mirrorlist" : 
             { 
               "servers" : "http://mirror.yandex.ru/archlinux/$repo/os/$arch" 
             }, 
           "disk" : 
             { 
               "lvm" : 
               { 
                 "lv" : "slashroot", 
                 "vg" : "vg_main" 
               } 
             }, 
           "bootloader" : 
             { 
               "grub" : 
                 {   
                   "type" : "bios", 
                   "target" : "/dev/sda" 
                 } 
             },
           "packages" : 
             { 
               "installed" : [  "openssh", "sudo", "networkmanager" ] 
             }, 
           "services" : 
             { 
               "enabled" : [ "sshd", "NetworkManager" ] 
             }
         }
     }
]
